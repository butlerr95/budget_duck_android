<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/list_item_expense_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/list_item_padding">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_expense_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/description"
                android:textColor="@color/text_primary"
                android:maxLength="@integer/description_max_field_length"
                android:maxLines="2"
                android:textSize="@dimen/font_size_small"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/text_expense_category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/category"
                android:maxLength="@integer/category_max_field_length"
                android:maxLines="1"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/text_secondary"
                android:gravity="center|start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/amount"
                android:maxLength="@integer/amount_max_field_length"
                android:maxLines="1"
                android:textSize="@dimen/font_size_base"
                android:textColor="@color/text_primary"
                android:gravity="center|end"/>

            <TextView
                android:id="@+id/text_expense_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/date"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/text_secondary"
                android:gravity="center|end"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>